[
  {
    "id": "webhook-ha-trigger-gate-pedestrian",
    "execute-command": "/etc/webhook/scripts/ha-trigger-gate-pedestrian.sh",
    "command-working-directory": "/etc/webhook",
    "trigger-rule": {
      "match": {
        "type": "value",
        "value": "{{WEBHOOK_SECRET_TRIGGER_GATE}}",
        "parameter": {
          "source": "header",
          "name": "X-Secret"
        }
      }
    }
  },
  {
    "id": "webhook-ha-trigger-gate",
    "execute-command": "/etc/webhook/scripts/ha-trigger-gate.sh",
    "command-working-directory": "/etc/webhook",
    "trigger-rule": {
      "match": {
        "type": "value",
        "value": "{{WEBHOOK_SECRET_TRIGGER_GATE}}",
        "parameter": {
          "source": "header",
          "name": "X-Secret"
        }
      }
    }
  },
  {
    "id": "webhook-diane-process-transcript",
    "execute-command": "/etc/webhook/scripts/transcript-to-docx-email.sh",
    "command-working-directory": "/etc/webhook",
    "trigger-rule": {
      "match": {
        "type": "value",
        "value": "{{WEBHOOK_USER_ID_DIANE}}",
        "parameter": {
          "source": "payload",
          "name": "user.id"
        }
      }
    },
    "pass-arguments-to-command": [
      {
        "source": "payload",
        "name": "payload.body-plain"
      }
    ]
  }
]